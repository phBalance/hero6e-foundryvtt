{{ log 'HEROSYS ATTACK SHEET' this }}
<form class="{{cssClass}}" autocomplete="off" data-id="{{item._id}}" data-realId="{{system.realId}}">
    <header class="sheet-header flexrow">
        <img class="profile" name="img" src="{{item.img}}" title="{{item.name}}" data-edit="img" />

        <div class="header-details flexrow">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="Attack Name" />
            </h1>
        </div>
    </header>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        <section class="sheet-content"> {{!-- sheet-content scrolls --}}
            <textarea placeholder="Attack Description" class="power-card-power-description textarea input"
                name="system.rules">{{system.rules}}</textarea>

            {{> systems/hero6efoundryvttv2/templates/item/item-attack-partial.hbs item=item }}
        </section>
    </section>
</form>