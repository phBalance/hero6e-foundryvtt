    <input type="checkbox" name="system.FAMILIARITY" {{checked item.system.FAMILIARITY}} data-dtype="Boolean" 
    {{#if (or item.system.LEVELSONLY item.system.PROFICIENCY)}}disabled{{/if}}/>
