{{#if alphaTesting}}
<table class="item-list effects-list">
    <tr>
        <th></th>
        <th class="left">{{localize "ActorSheet.ActiveEffect"}}</th>
        <th>Active</th>
        <th>
            {{!-- <a class="item-control effect-create" title="Create Active Effecct" data-type="activeEffect">
                <i class="fas fa-plus"></i> Add ActiveEffect</a> --}}
        </th>
    </tr>
    {{#each effects as |effect|}}
    <tr class="item" data-effect-id="{{effect._id}}">
        <td style="min-width: 24px">
            <div class="item-image"><img src="{{effect.icon}}" title="{{effect.name}}" width="24" height="24" />
            </div>
        </td>
        <td class="left">{{effect.name}}</td>
        <td>
            <input class="effect-toggle" type="checkbox" {{checked (not effect.disabled)}} data-dtype="Boolean"
                data-action="toggle" />
            {{!-- {{#if effect.disabled}}N{{else}}Y{{/if}} --}}
        </td>
        <td class="right">
            <a class="item-control effect-edit" title="Edit effect"><i class="fas fa-edit"></i></a>
            <a class="item-control effect-delete" title="Delete effect">
                <i class="fas fa-trash"></i>
            </a>
        </td>
    </tr>
    {{/each}}
</table>
{{/if}}