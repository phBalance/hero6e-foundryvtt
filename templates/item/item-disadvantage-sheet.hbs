{{ log 'item-disadvantage-sheet.hbs' this }}
<form class="hero {{cssClass}} flexcol auto-overflow" autocomplete="off" data-id="{{item._id}}" data-realId="{{item.system.realId}}">
    <header class="sheet-header flexrow">
        <img class="profile" name="img" src="{{item.img}}" title="{{item.name}}" data-edit="img" />

        <div class="header-details flexrow">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="Complication Name" />
            </h1>
        </div>
    </header>

    <section class="sheet-body">
        {{> systems/hero6efoundryvttv2/templates/item/item-common-partial.hbs item=item }}
    </section>
</form>
