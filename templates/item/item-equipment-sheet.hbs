{{log 'item-equipment-sheet' this}}
<form class="{{cssClass}}" autocomplete="off" data-id="{{item._id}}">
    <header class="sheet-header flexrow">
        <img class="profile" name="img" src="{{item.img}}" title="{{item.name}}" data-edit="img" />

        <div class="header-details flexrow">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="Name" />
            </h1>
        </div>
    </header>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        <div class="form-group">
            <label>Carried</label>
            <input type="checkbox" name="system.CARRIED" {{checked system.CARRIED}} data-dtype="Boolean" />
        </div>

        <div class="form-group">
            <label>Active</label>
            <input type="checkbox" name="system.active" {{checked system.active}} data-dtype="Boolean" />
        </div>

        <div class="form-group">
            <label>Weight</label>
            <input type="text" name="system.WEIGHT" value="{{system.WEIGHT}}" data-dtype="Number" />
        </div>

        <div class="form-group">
            <label>Price</label>
            <input type="text" name="system.PRICE" value="{{system.PRICE}}" data-dtype="Number" />
        </div>

        {{!-- Common --}}
        {{> (getModulePath 'item/item-partial-common.hbs') }}

        {{!-- Active Points --}}
        {{> (getModulePath 'item/item-partial-active-points.hbs') }}

        {{!-- Adders & Modifiers --}}
        {{> (getModulePath 'item/item-partial-adders-modifiers.hbs') }}
    </section>
    <button class="convert-to-power">Convert to POWER</button>
</form>