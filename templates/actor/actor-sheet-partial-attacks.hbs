<div class="tab tab-body" data-group="primary" data-tab="attacks">
    <table>
        <tr>
            <th class="sticky"></th>
            <th class="left sticky">{{localize "ActorSheet.Name"}}</th>
            <th class="sticky">{{localize "ActorSheet.OCV"}}</th>
            <th class="sticky">{{localize "ActorSheet.DCV"}}</th>
            <th class="sticky">{{localize "ActorSheet.OffVDef"}}</th>
            <th class="sticky">{{localize "ActorSheet.Dmg"}}</th>
            <th class="sticky">{{localize "ActorSheet.Res"}}</th>
            <th class="sticky">{{localize "ActorSheet.End"}}</th>
            <th class="sticky">{{localize "ActorSheet.Aoe"}}</th>
            <th class="sticky">{{localize "ActorSheet.Roll"}}</th>
            <th class="sticky"></th>
        </tr>
        {{#each items as |item id|}}
            {{#if (or (eq item.type "attack") (and (or (eq item.system.XMLID "STRIKE") (ne item.type "maneuver")) (itemHasActionBehavior item "to-hit") (ne item.system.XMLID "__STRENGTHDAMAGE")))}}
                {{#if item.showAttack}}
                    <tr class="item {{#if (not this.isFromBaseActor)}}delta-item{{/if}}"
                        data-item-id="{{item._id}}" >
                        <td>
                            <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24"
                                    height="24" /></div>
                        </td>
                        <td class="left" data-tooltip="{{item.name}}: {{item.system.description}}">
                            {{#if (eq item.parentItem.system.XMLID "COMPOUNDPOWER")}}
                                {{{item.parentItem.name}}}: 
                            {{/if}}
                            {{{itemName item}}}
                        </td>
                        <td data-tooltip="{{{item.system.ocvDetails.tooltip}}}">
                            {{item.system.ocvDetails.value}}
                        </td>
                        <td data-tooltip="{{{item.system.dcvDetails.tooltip}}}">
                            {{item.system.dcvDetails.value}}
                        </td>
                        <td>
                            {{item.attacksWith}} vs {{item.defendsWith}}
                        </td>
                        <td>
                            {{item.system.damage}}
                        </td>
                        <td>
                            {{item.attackDefenseVs}}
                        </td>
                        <td>
                            {{item.system.endEstimate}}
                        </td>
                        <td>
                            {{#if item.aoeAttackParameters}}
                                {{item.aoeAttackParameters.shortDesc}}
                            {{else}}
                                -
                            {{/if}}
                            {{!-- {{else}}
                                {{#if (ne item.system.areaOfEffect.type "none")}}
                                    {{item.system.areaOfEffect.type}}
                                    {{#if (or item.system.areaOfEffect.isExplosion (gt item.system.areaOfEffect.value 0))}}
                                        ({{#if (gt item.system.areaOfEffect.value 0)}}{{item.system.areaOfEffect.value}}{{/if}}{{#if item.system.areaOfEffect.isExplosion}}e{{/if}})
                                    {{/if}}
                                {{/if}}
                            {{/if}} --}}
                        </td>
                        <td>
                            {{> (getModulePath 'item/item-action-icons-partial.hbs') item }}
                        </td>
                        <td>
                            <div class="item-controls" data-group="mode">
                                <a class="item-control item-chat" title="{{localize "ActorSheet.SendToChat"}}"><i class="fas fa-comment-alt"></i></a>
                                <a class="item-control item-edit" title="{{localize "ActorSheet.EditItem"}}"><i class="fas fa-edit"></i></a>
                                {{!-- <a class="item-control item-delete" title="{{localize "ActorSheet.DeleteItem"}}"><i class="fas fa-trash"></i></a> --}}
                            </div>
                        </td>
                    </tr>
                {{/if}}
            {{/if}}
        {{/each}}
    </table>
</div>