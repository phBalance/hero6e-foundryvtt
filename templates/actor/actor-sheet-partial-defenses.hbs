<div class="tab tab-body" data-group="primary" data-tab="defenses">
    <table>
        <tr>
            <th class="sticky"></th>
            <th class="left sticky">{{localize "ActorSheet.Description"}}</th>
            <th class="sticky">{{localize "ActorSheet.End"}}</th>
            <th class="sticky">{{localize "ActorSheet.Active"}}</th>
            <th class="sticky"></th>
        </tr>
        {{#each items as |item id|}}
            {{#if (or (includes item.baseInfo.type "defense") (hasDefenseActiveEffect item)) }}
                <tr class="item {{#if (not this.isFromBaseActor)}}delta-item{{/if}}"
                    data-item-id="{{item._id}}">
                    <td style="min-width: 24px">
                        <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24"
                                height="24" /></div>
                    </td>
                    <td class="left {{#if item.parentItem}}parent-xmlid-{{toLowerCase item.parentItem.system.XMLID}} parent-xmlid-{{toLowerCase item.parentItem.parentItem.system.XMLID}}{{/if}}">
                        {{#if item.parentItem}}{{{item.parentItem.name}}}: {{/if}}
                        {{{itemFullDescription item}}}
                        {{#if item.system.NOTES}}
                            <div class="item-notes-editable-content"><b>Notes:</b> {{{item.system.NOTES}}}</div>
                        {{/if}}
                    </td>
                    <td>{{item.end}}</td>
                    <td>
                        {{#if (itemHasActionBehavior this "activatable")}}
                            {{#if this.disabledOIHID}}
                                <i class="fal fa-minus-square fa-xl item-oihid" title="{{localize "ActorSheet.OnlyInHeroicID"}}" width="24" height="24"></i>
                            {{else}}
                                <input class="item-toggle" type="checkbox"
                                Xname="this.system.active" {{checked this.isActive}} data-dtype="Boolean"
                                data-action="toggle" />
                            {{/if}}
                        {{/if}}
                    </td>
                    <td>
                        <a class="item-control item-chat" title="{{localize "ActorSheet.SendToChat"}}"><i
                                class="fas fa-comment-alt"></i></a>
                        <a class="item-control item-edit" title="{{localize "ActorSheet.EditItem"}}"><i class="fas fa-edit"></i></a>
                        <a class="item-control item-delete" title="{{localize "ActorSheet.DeleteItem"}}">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>

                </tr>
            {{/if}}
        {{/each}}

    </table>

</div>