<section
  class='tab equipment {{tab.cssClass}}'
  data-group='primary'
  data-tab='equipment'
>
    {{> (getModulePath 'actor/actor-sheet-v2-parts/actor-sheet-search-partial-v2.hbs') this }}
    <section class="item-list-container">
        <div class="item-header">
            <div class="item-column item-description">{{localize "ActorSheet.Description"}}</div>
            <div class="item-column item-end">{{localize "ActorSheet.End"}}</div>
            <div class="item-column item-price">{{localize "ActorSheet.Price"}}</div>
            <div class="item-column item-weight">{{localize "ActorSheet.Weight"}}</div>
            <div class="item-column item-carried">{{localize "ActorSheet.Carried"}}</div>
            <div class="item-column item-controls"></div>
        </div>

        <ol class="item-list unlist">
            {{#each items as |item|}}
                {{> (getModulePath 'actor/actor-sheet-v2-parts/actor-sheet-equipment-partial-item-v2.hbs') item }}
            {{/each}}
        </ol>
    </section>
</section>