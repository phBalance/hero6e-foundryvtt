<li class="item powers draggable expandable-document" data-document-uuid="{{this.uuid}}">
    <div class="item-row {{#if (not this.isFromBaseActor)}}delta-item{{/if}} {{this.system.XMLID}} {{#if this.vppUnSlotted}}vpp-unslotted{{/if}} {{actorItemHeroValidationCss this}}"
    title="{{actorItemHeroValidation this}}"
    >
        {{#if (eq item.system.XMLID "LIST")}}
            <div class="item-column item-name">
                <img class="item-image" src="{{this.img}}" alt="{{this.name}}">
                <div class="name">
                    <div class="label">{{this.name}}</div>
                    <div class="keywords">{{this.system.XMLID}}</div>
                </div>
            </div>
            <div></div> {{!-- cost --}}
            <div></div> {{!-- description --}}
            <div></div> {{!-- end --}}
            <div></div> {{!-- active --}}
        {{else}}
            <div class="item-column item-name">
                <img class="item-image" src="{{this.img}}" alt="{{this.name}}">
                {{!-- <div class="name">
                    <div class="label">{{this.name}}</div>
                    <div class="keywords">{{this.system.XMLID}}</div>
                </div> --}}
            </div>
            <div class="item-column item-cost">
                {{#if (eq this.system.XMLID "COMPOUNDPOWER")}}
                    {{this.compoundCostForDisplay}}
                {{else if this.isSeparator}}
                    {{!-- Show no cost--}}
                {{else if (eq this.system.XMLID "LIST")}}
                    <span style="opacity: 0.5">{{this.listCost}}</span>
                {{else}}
                    {{#if (eq this.parentItem.system.XMLID "COMPOUNDPOWER")}}
                        <span style="opacity: 0.5">{{this.characterPointCostForDisplayPlusSuffix}}</span>
                    {{else}}
                        {{this.characterPointCostForDisplayPlusSuffix}}
                    {{/if}}
                {{/if}}
            </div>
            <div class="item-column item-description {{#if this.parentItem.type}}item-framework-child-name{{#if this.parentItem.parentItem}}2{{/if}}{{/if}} {{#if (and this.childIdx this.parentItem)}}parent-xmlid-{{toLowerCase this.parentItem.system.XMLID}} parent-xmlid-{{toLowerCase this.parentItem.parentItem.system.XMLID}}{{/if}}">
                {{#if (and this.childIdx this.parentItem)}}
                    {{this.childIdx}})
                {{/if}}
                {{{itemFullDescription this}}}
                {{#if this.system.NOTES}}
                    <div class="item-notes-editable-content"><b>Notes:</b> {{{this.system.NOTES}}}</div>
                {{/if}}
            </div>
            <div class="item-column item-end">
                {{this.system.endEstimate}}
            </div>
            <div class="item-column item-dmg">
                {{> (getModulePath 'item/item-action-icons-partial.hbs') this }}
            </div>
        {{/if}}
        <div class="item-column item-controls">
            <a class="fa-fw fa-solid fa-ellipsis-vertical" data-action="documentListContext"></a> 
        </div>
    </div>
</li>