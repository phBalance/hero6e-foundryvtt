<section
  class='tab invalid {{tab.cssClass}}'
  data-group='primary'
  data-tab='invalid'
>

   <p>
        The following items are no longer valid. Recommend re-uploading the HDC file.
    </p>
    
    <section class="item-list-container">
        <div class="item-header" data-tooltip="{{localize title}}">
            <div class="item-column item-description">Invalid Items</div>
            <div class="item-column item-controls"></div>
        </div>

        <ol class="item-list unlist">
            {{#each items}}
                <li class="item effects" data-document-uuid="{{this.uuid}}">
                    <div class="item-row validation-error">
                        <div class="item-column item-description">
                            
                            {{#if (ne this.system.XMLID "LIST")}}
                                <img class="item-image" src="{{this.img}}" alt="{{this.name}}">
                            {{/if}}

                            <div class="item-description-full {{this.css.description}}">
                                {{{itemFullDescription this}}}
                            </div>
                            
                        </div>
                        <div class="item-column item-type">
                            {{this.type}}
                            {{this.system.XMLID}}
                        </div>
                    </div>
                </li>
            {{/each}}
        </ol>
    </section>


</section>