{{!-- {{log "actor-sheet-conditions-v2" this}} --}}
<section
  class='tab conditions {{tab.cssClass}}'
  data-group='primary'
  data-tab='conditions'
>
    <fieldset class="status-effects">
        <legend>{{localize "StatusConditions"}}</legend>
        <div class="status-container">
            {{#each statuses as |status id|}}
                <button type="button" class="status-control {{status.active}}" data-status-id="{{id}}" data-tooltip-html="{{status.tooltip}}" data-action="toggleStatus">
                    <img src="{{status.img}}" alt="{{status.name}}">
                    <span>{{status.name}}</span>
                </button>
            {{/each}}
        </div>
    </fieldset>

</section>