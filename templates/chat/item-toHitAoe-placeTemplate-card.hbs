{{ log 'HEROSYS item-toHitAoe-placeTemplate-card' this }}
<div class="hero chat-card item-card item-toHitAoe-placeTemplate-card">

    <span class="flavor-text">

        {{!-- Attack Name --}}
        <header class="card-header attack flexrow">
            <img src="{{effectiveItem.img}}" title="{{effectiveItem.name}}" width="36" height="36" />
            <h3 class="item-name">{{{itemName effectiveItem}}}</h3>
        </header>

        <div class="tags">
            {{#each attackTags as |tag id|}}
            <span class="tag" {{#if tag.title}}title="{{tag.title}}" {{/if}}>{{tag.name}}</span>
            {{/each}}
        </div>
        <hr>
    </span>

    <section class="owner-buttons">
        <div class="template-button">
            <button class="place-template" action="place-template"
            data-tooltip="Left click to lock position.">
                Place {{aoeText}} template
            </button>
            <button class="remove-template" action="remove-template">
                <i class="fa-solid fa-trash"></i>
            </button>
        </div>
        <div class="template-button">
            <button class="roll-template-placement" action="roll-template-placement">
                Roll template placement
            </button>
        </div>
    </section>
</div>